{
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "curly": ["error", "all"],
    "eqeqeq": ["error", "always"],
    "prefer-const": "error",
    "prettier/prettier": ["error", { "singleQuote": true }],
    "no-var": "error"
  }
}
